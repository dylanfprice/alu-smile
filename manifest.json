{
	"manifest_version": 3,
	"name": "ALU Smile",
	"version": "1.0",
	"description": "Donate to the Amazon Labor Union when you shop on Amazon.com.",
	"icons": {
		"16": "public/alu-smile-16.png",
		"48": "public/alu-smile-48.png",
		"128": "public/alu-smile-128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "alu.smile.extension@gmail.com"
		}
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"js": [
				"./dist/alu-smile.modern.mjs"
			],
			"matches": [
				"https://www.amazon.com/gp/buy/*",
				"http://localhost/*"
			]
		}
	],
	"options_ui": {
		"page": "public/options-ui.html",
		"browser_style": false
	}
}
